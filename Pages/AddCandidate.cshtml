@page
@model SuperAdminPanel.Pages.AddCandidateModel
@{
    ViewData["Title"] = "Add New Candidate";
}

<link rel="stylesheet" href="~/css/AddAdmin.css">

<div class="page-container">
   

    <main class="page-content">
        <form id="add-candidate-form" method="post" class="admin-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-section">
                <h2 class="section-title">Personal Information</h2>
                <div class="form-grid">
                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="CandidateInput.Name" class="form-label"></label>
                            <input asp-for="CandidateInput.Name" class="form-input" placeholder="Enter full name" />
                            <span asp-validation-for="CandidateInput.Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="CandidateInput.Email" class="form-label"></label>
                            <input asp-for="CandidateInput.Email" class="form-input" placeholder="Enter email address" />
                            <span asp-validation-for="CandidateInput.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="CandidateInput.Phone" class="form-label"></label>
                            <input asp-for="CandidateInput.Phone" class="form-input" placeholder="(123) 456-7890" />
                            <span asp-validation-for="CandidateInput.Phone" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="CandidateInput.Location" class="form-label"></label>
                            <input asp-for="CandidateInput.Location" class="form-input" placeholder="City, Country" />
                            <span asp-validation-for="CandidateInput.Location" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <a asp-page="/Candidates/List" class="btn btn-outline">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    <i class="ri-save-line mr-2"></i>
                    Add Candidate
                </button>
            </div>
        </form>
    </main>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Phone number formatting
            const phoneInput = document.getElementById('CandidateInput_Phone');
            if (phoneInput) {
                phoneInput.addEventListener('input', function(e) {
                    const x = e.target.value.replace(/\D/g, '').match(/(\d{0,3})(\d{0,3})(\d{0,4})/);
                    e.target.value = !x[2] ? x[1] : '(' + x[1] + ') ' + x[2] + (x[3] ? '-' + x[3] : '');
                });
            }
        });
    </script>
}