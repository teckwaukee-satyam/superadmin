@page
@model SuperAdminPanel.Pages.AdminModel
@{
    ViewData["Title"] = "Admin Management";
}

<link rel="stylesheet" href="~/css/Admin.css">
<section id="admin-page" class="container mt-4">
    <h1 class="text-center mb-4">Admin Management</h1>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div>
                        <h3 class="card-title">Admin List</h3>
                        <p class="card-description">
                            A list of all administrators in your company.
                        </p>
                        <button id="add-admin-btn" class="btn btn-primary mt-2">
                            <a asp-page="/AddAdmin" class="text-white text-decoration-none">Add Admin</a>
                        </button>
                    </div>
                </div>
                <div class="card-content">
                    <div class="table-container">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>WhatsApp</th>
                                    <th>Employee ID</th>
                                    <th>Designation</th>
                                    <th>Office Address</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="Admin-table-body">
                                <tr>
                                    <td class="font-medium">Jane Smith</td>
                                    <td>jane@example.com</td>
                                    <td>+1234567890</td>
                                    <td>EMP-1001</td>
                                    <td>Marketing Manager</td>
                                    <td>123 Main St, New York</td>
                                    <td>Active</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary me-2">
                                            <i class="ri-edit-line"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger">
                                            <i class="ri-delete-bin-line"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="font-medium">John Doe</td>
                                    <td>john@example.com</td>
                                    <td>+9876543210</td>
                                    <td>EMP-1002</td>                                    <td>CTO</td>
                                    <td>456 Tech Ave, San Francisco</td>                                     <td>Inactive</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary me-2">
                                            <i class="ri-edit-line"></i>
                                        </button>
                    </div>
                    <div class="mt-4 text-sm text-muted-foreground" id="Admin-count">
                        Showing 2 administrators
                    </div>
                </div>
            </div>
        </div>

    </section>

@section Scripts {
    @* Add any page-specific scripts here *@
}
