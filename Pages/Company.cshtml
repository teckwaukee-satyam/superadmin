@page
@model SuperAdminPanel.Pages.CompanyModel

<link rel="stylesheet" href="~/css/Company.css">

<section id="company-page" class="page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-sm mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="card-title mb-0">Company Details</h3>
                            <p class="card-description text-muted mb-0">
                                Basic information about your company.
                            </p>
                        </div>
                        <a asp-page="/AddCompany" class="btn btn-primary">
                            Add Company Info
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Company Name</th>
                                        <th>Industry</th>
                                        <th>Founded</th>
                                        <th>Website</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Address</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Techwaukee</td>
                                        <td>Technology</td>
                                        <td>2016</td>
                                        <td>www.techwaukee.com</td>
                                        <td>contact@techwaukee.com</td>
                                        <td>000000000</td>
                                        <td>3rd Floor Workfella, Teynampet</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

<script src="/js/Company.js"></script>